{
  "name": "Bookmark Bar Exporter",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Exports the urls of bookmarks on the bookmark bar",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" 
  }, 
  "background": {
    "scripts": [ "background.js" ]
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Generate Bookmark List"
  },
  "permissions": [
    "tabs",
    "bookmarks"
  ]
}
